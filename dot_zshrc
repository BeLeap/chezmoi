if [[ ! -z "$(command -v hx)" ]]; then
  export EDITOR hx
else
  export EDITOR vim
fi


export PATH=$HOME/.local/bin:/opt/homebrew/bin:$PATH
export LC_ALL="en_US.UTF-8"

alias k="kubectl"

alias ls="lsd"
alias ll="lsd -l"
alias lla="lsd -al"

alias sozsh="source $HOME/.zshrc"

if [[ ! -z "$(command -v starship)" ]]; then
  eval "$(starship init zsh)"
fi

if [[ -d "$HOME/.asdf" ]]; then
  . "$HOME/.asdf/asdf.sh"
fi
