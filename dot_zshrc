function create_rc_pr() {
    branch=$(git branch --list master main | head -n 1 | awk '{print $1}')
    if [ -z "$branch" ]; then
        echo "Neither master nor main branch exists."
        return 1
    fi

    echo "Creating RC PR to branch: $branch"

    gh pr create --assignee @me --base $branch --title "RC" --body "RC $(date -u +%Y-%m-%dT%H:%M:%S)"
}
alias crcpr="create_rc_pr"

function gpc() {
  # 현재 브랜치명을 가져온다
  branch_name=$(git rev-parse --abbrev-ref HEAD)

  # 브랜치명에서 issue 번호 추출 (형식: #123 또는 ABC-1234)
  issue=$(echo $branch_name | sed -E 's|([^/]+).*|\1|')

  # 추출한 issue 번호가 유효한지 확인
  if [[ $issue =~ ^(#|[A-Z]+-[0-9]+)$ ]]; then
    # 임시 파일 생성
    temp_file=$(mktemp /tmp/commit_msg.XXXXXX)

    # 템플릿 형식으로 [<issue>]를 파일의 첫 줄에 작성
    echo "[$issue] " > $temp_file

    # git commit 명령을 호출하면서 템플릿 파일을 사용
    git commit -v -t $temp_file

    # 임시 파일 삭제
    rm -f $temp_file
  else
    echo "Error: 현재 브랜치에서 유효한 issue 번호를 찾을 수 없습니다."
    echo "브랜치 형식은 #123 또는 ABC-1234 형식이어야 합니다."
  fi
}

